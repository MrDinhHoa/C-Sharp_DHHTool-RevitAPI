                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ValidationErrorTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Window.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DataGrid
        AutoGenerateColumns="False"
        Background="AntiqueWhite"
        CanUserAddRows="False"
        ItemsSource="{Binding DgSectionBeam}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Binding="{Binding BeamName}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Tên" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding SectionLocation}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Vị trí" TextAlignment="Center" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding B}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="B" TextAlignment="Center" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding H}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="H" TextAlignment="Center" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding DiaStirrup}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Dia-Stirrup" TextAlignment="Center" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding NStirrup}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="N-Stirrup" TextAlignment="Center" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding DisStirrup}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Dis-Stirrup" TextAlignment="Center" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding nMain1}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="S. Lượng 1" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding DiaMain1}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Đ. Kính 1" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding nMain2}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="S. Lượng 2" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Binding="{Binding DiaMain2}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Đ. Kính 2" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="1.2*" Binding="{Binding nSub}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="S. Lượng Phụ" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="1.2*" Binding="{Binding DiaSub}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Đ. Kính Phụ" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Button
            Width="200"
            Margin="4"
            Command="{Binding CreateSectionDetail}"
            Content="OK"
            DockPanel.Dock="Right" />
            <Button
            Width="200"
            Margin="4"
            HorizontalAlignment="Right"
            Command="{Binding FileExcelOpen}"
            Content="Tệp Excel" />

        </DockPanel>
    </Grid>
</Window>
