    </Window.Resources>
    <Grid>
        <ProgressBar  
                Value="{Binding ValueCountCAD, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Maximum="{Binding MaxCountCAD, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                
                Minimum="0"
                Height="40"
                Style="{DynamicResource MaterialDesignLinearProgressBar}">
        </ProgressBar>
        <TextBlock Text="{Binding MaxCountCAD, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                   FontSize="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

    </Grid>
</Window>
