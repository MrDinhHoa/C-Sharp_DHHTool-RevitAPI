        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="True">
            <DataGrid 
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ItemsSource="{Binding DgViewPlanInfor}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="500" Header="Mặt bằng">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox
                                        DisplayMemberPath="Name"
                                        ItemsSource="{Binding AllViewPlan}"
                                        SelectedIndex="0"
                                        SelectedValue="{Binding SelectViewPlan, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                        DisplayMemberPath="Name"
                                        ItemsSource="{Binding DataContext.AllViewPlan, ElementName=RebarSlabSchedule2D}"
                                        SelectedItem="{Binding SelectViewPlan, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Width="*" Binding="{Binding ViewNameSelect, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >
                        <DataGridColumn.Header>
                            <TextBlock Text="View Name" />
                        </DataGridColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <Grid Grid.Row="1" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
